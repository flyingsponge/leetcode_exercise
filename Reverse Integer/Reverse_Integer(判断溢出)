class Solution {
public:
    int reverse(int x) {
        int rev;
        int pop;
        while(x!=0)
        {
            pop=x%10;
            x=x/10;
            if(rev>INT_MAX/10||(rev==INT_MAX/10 && pop>7))
                return -1;
            if(rev<INT_MIN/10||(rev==INT_MIN/10 && pop<-8))
                return -1;
            else
                rev=rev*10+pop;
        }
        return rev;
        
    }
};
