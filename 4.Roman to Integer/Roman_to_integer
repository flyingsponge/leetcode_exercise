class Solution {
public:
    int romanToInt(string s) {
        map<char,int> map={{'I',1},{'V',5},{'X',10},{'L',50},{'C',100},{'D',500},{'M',1000}};
        int value=0;
        for(int i=0;i<s.size();++i)
        {
            if(map[s[i]]>=map[s[i+1]] || i==s.size()-1)
                value=value+map[s[i]];
            else
                value=value-map[s[i]];
        }
        return value;
    }
};
